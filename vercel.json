{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "query",
          "key": "admin_token",
          "value": "admin-access"
        },
        {
          "type": "query",
          "key": "edit_mode",
          "value": "true"
        }
      ],
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://siteadmin-*.vercel.app https://*.vercel.app"
        }
      ]
    }
  ]
}

